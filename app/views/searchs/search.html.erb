<div class="container" style="max-width:100%;">
  <div class="row post-list">
    <div class="offset-3 col-10 "><h2 class="post-list-title">Search Results '<%= @value %>'</h2></div>
  </div>
  <div class="row  post-row">
    <div class="col-3 post-left">
      <%= render "users/info", user: current_user %>
      <% if  current_user %>
        <div>
        <%= link_to "DM", rooms_path, class: "btn btn-dark btn-block " %>
        </div>
        <div>
      ã€€<%= link_to 'Edit',edit_user_path(current_user),class: "btn btn-secondary btn-block" %>
        </div>
      <% end %>
    </div>
    <div class="offset-1 col-6 post-center">
      <% if @model == "user" %>
      <table class="table table-borderless">
      <% @datas.each do |user| %>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(user.id),style:"color:black;" do %>
                <%= attachment_image_tag(user, :image, size: "50x30", fallback: "no_image.jpeg",class:"profile-image") %>
              <% end %>
            </td>
            <td>
              <%= link_to user_path(user.id),style:"color:white;" do %>
                <h4><i class="fas fa-portrait"></i><%= user.users_name %></h4>
              <% end %>
            </td>
            <td>
              <%= link_to user_path(user.id),style:"color:white;" do %>
                <h4><span class="post-count">Post <i class="fas fa-rocket"></i> <%= user.posts.count %></span></h4>
              <% end %>
            </td>
            <td>
              <%= link_to user_path(user.id),style:"color:white;" do %>
                <h4><%= user.introduction %></h4>
              <% end %>
            </td>
          </tr>
        </tbody>
      <% end %>
      </table>
      <% elsif @model == "post" %>
      <table class="table table table-borderless">
        <% @datas.each do |post| %>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(post.user.id),style:"color:white;" do %>
                <%= attachment_image_tag(post.user, :image, size: "50x30", fallback: "no_image.jpeg",class:"profile-image") %>
              <% end %>
            </td>
            <td>
              <%= link_to user_path(post.user.id),style:"color:white;" do %>
                <h4><i class="fas fa-portrait"></i><%= post.user.users_name %></h4>
              <% end %>
            </td>
            <td>
              <%= link_to user_path(post.user.id),style:"color:white;" do %>
                <h4><%= post.body %></h4>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <% end %>
    </div>
  </div>
</div>