<header>
  <nav class="navbar navbar-expand-lg navbar-light" style="height:80px;">
    <div class="container">
      <%= link_to "The Universe", posts_path,class: 'fas fa-star-and-crescent nav-link text-light'%>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item header-link"><%= link_to 'Follow Posts', timeline_path,class: 'fas fa-users nav-link text-light' %></li>
            <li class="nav-item header-link"><%= link_to 'My Page', user_path(current_user.id) ,class: 'fas fa-address-card nav-link text-light'%></li>
            <li class="nav-item header-link"><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'fas fa-sign-out-alt nav-link text-light'%></li>
            <li class="nav-item header-link">
              <%= form_with url: search_path, method: :get, local: true do |f| %>
                <%= f.text_field "search[value]",class:"search-form" %>
                <%= f.select "search[model]", options_for_select({"User" => "user", "Post" => "post"}) %>
                <%= f.select "search[how]", options_for_select({"Match" => "match", "Partical" => "partical"}) %>
                <%= f.submit :"Searh",class:"btn btn-dark btn-sm" %>
              <% end %>
            </li>
          <% else %>
            <li class="nav-item header-link"><%= link_to 'Sign Up', new_user_registration_path,class: 'fas fa-user-plus nav-link text-light' %></li>
            <li class="nav-item header-link"><%= link_to 'Login', new_user_session_path ,class: 'fas fa-sign-in-alt nav-link text-light'%></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>