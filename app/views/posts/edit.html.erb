<div class="container" style="max-width:100%;">
  <div class="row post-list">
    <div class="offset-1 col-3 "><h2 class="post-list-title">Poster</h2></div>
    <div class="offset-1 col-4"><h2 class="post-list-title">Edit Post</h2></div>
    <div class="col-2 "><h2 class="post-list-title">All Posters</h2></div>
  </div>
  <div class="row post-row">
    <div class="col-3 post-left">
      <%= render "users/info", user: @user %>
    </div>
    <div class="col-5">
      <div class="border-block">
      <%= form_with model: @post do |f| %>
      <%= render "layouts/errors", model: @post %>
        <div><h3><%= f.label :Post %></h3></div>
        <div><%= f.text_area :body,class: "form-control" %></div>
        <div class="form-group text-center"><%= attachment_image_tag @post, :image, size: "300x200" %></div>
        <div class="form-group"><%= f.attachment_field :image %></div>
      </div>
        <div class="form-group"><%= f.submit "Update",class: "btn btn-dark btn-block" %></div>
        <div><%= link_to "Delete", post_path(@post),method: :delete, class: "btn btn-danger btn-block" %></div>
      <% end %>
    </div>
    <div class="col-3">
      <div class="post-right">
      <% @users.reverse_each do |users| %>
      ã€€<div class="all-poster">
          <h6>
          <%= link_to user_path(users) ,style: "color:black;" do %>
            <%= attachment_image_tag(users, :image, size: "50x30", fallback: "no_image.png",class:"profile-image") %>
            <i class="fas fa-portrait"></i><%= users.users_name %>
          <% end %>
          </h6>
        </div>
      <% end %>
      <%= paginate @users %>
      </div>
    </div>
  </div>
</div>