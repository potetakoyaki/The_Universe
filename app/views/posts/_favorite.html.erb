<% if user_signed_in? %>
  <% if post.favorited_by?(current_user) %>
    <%= link_to post_favorites_path(post), method: :DELETE, remote: true, class: "btn" do %>
      <i class="fas fa-kiss-wink-heart" > <%= post.favorites.count %></i>
    <% end %>
  <% else %>
    <%= link_to post_favorites_path(post), method: :POST, remote: true, class: "btn" do %>
      <i class="far fa-kiss-wink-heart"> <%= post.favorites.count %></i>
    <% end %>
  <% end %>
<% else %>
  <i class="far fa-kiss-wink-heart"><%= post.favorites.count %></i>
<% end %>
