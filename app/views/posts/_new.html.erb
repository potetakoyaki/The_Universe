<div>
  <%= form_with model: posts, remote: true do |f| %>
    <div class="form-group">
       <h3><strong><%= f.label :Post %></strong></h3>
      <%= f.text_area :body, class: 'form-control posts_body' %>
    </div>
    <div class="form-group">
      <%= f.attachment_field :image, id: "postimage" %>
    </div>
    <div class="form-group">
      <%= f.submit class: 'btn btn-dark btn-block' %>
    </div>
  <% end %>
</div>
