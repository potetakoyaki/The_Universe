<div class="container" style="margin-top:30px;">
  <div class="row">
    <div class="offset-md-2 col-md-7">
      <h2 class="text-center my-3">Login</h2>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= form_with scope: resource, url: session_path(resource_name), local: true do |f| %>
          <div class="form-group">
            <%= f.label "Mail Address" %><br/>
            <%= f.email_field :email, placeholder: "Mail Address", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Passward" %>
            <%= f.password_field :password, placeholder: "Passward", autocomplete: "off", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "Login", class: "btn btn-block btn-info" %>
          </div>
        <% end  %>
      </div>
    </div>
  </div>
</div>