<div class='container edit-user'>
  <div class='row'>
    <div class="col-8 mx-auto">
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>
      <%= f.attachment_field :image, id: "file" %>
      <div id="img_field" onClick="$('#file').click()" >
        <%= attachment_image_tag(@user, :image, size: "200x130",class:"profile-image-edit",id: "preview", fallback: "no_image.jpeg",) %>
      </div>
        <script>
          $('#file').on('change', function (e) {
            var reader = new FileReader();
              reader.onload = function (e) {
                $("#preview").attr('src', e.target.result);
          }
          reader.readAsDataURL(e.target.files[0]);
        });
        </script>
      <%= render 'layouts/errors', model: @user %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :user_name %>
        <%= f.text_field :users_name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_field :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
      <div class="form-group">
      <p style="color:white;">Click here for withdrawal procedures</p>
        <%= link_to "Withdrawal", unsubscribe_path ,class: "btn btn-danger btn-sm"%>
      </div>
    <% end %>
  </div>
</div>