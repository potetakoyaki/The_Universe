<div class='container edit-user'>
  <div class='row'>
    <div class="col-8 mx-auto">
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>
      <%= render 'layouts/errors', model: @user %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :user_name %>
        <%= f.text_field :users_name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.attachment_field :image, class: "form-control-file user_image" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_field :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
      <div class="form-group" style="margin-top:20%;">
      <p style="color:white;">Click here for withdrawal procedures</p>
        <%= link_to "Withdrawal", unsubscribe_path ,class: "btn btn-danger btn-sm"%>
      </div>
    <% end %>
  </div>
</div>