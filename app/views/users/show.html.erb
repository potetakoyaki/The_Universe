<div class="container" style="max-width:100%;">
  <div class="row post-list">
    <% if @user == current_user %>
      <div class="offset-1 col-3 "><h2 class="post-list-title"><strong>My Page</strong></h2></div>
    <% else %>
      <div class="offset-1 col-3 "><h2 class="post-list-title"><strong>@<%= @user.users_name %></strong></h2></div>
    <% end %>
    <div class="offset-1 col-4"><h2 class="post-list-title">Posts</h2></div>
    <div class="col-2 "><h3 class="post-list-title">All Posters</h3></div>
  </div>
  <div class="row post-row">
    <div class="offset-1 col-3 post-left">
      <%= render "users/info", user: @user %>
      <% unless current_user == @user %>
        <% if current_user.following?(@user) %>
          <%= link_to 'Unfollow', unfollow_path(@user.id), method: :POST, class: "btn btn-secondary", style: "width:100%;" %>
        <% else %>
          <%= link_to 'Follow', follow_path(@user.id), method: :POST, class: "btn btn-primary",style: "width:100%;" %>
        <% end %>
      <% end %>
    </div>
    <div class="offset-1 col-4">
      <div class="row">
        <div class="col-12 allpost">
          <div id="post">
            <% @user.posts.reverse_each do |post| %>
              <table class="post-table">
                <tr>
                  <td>
                    <%= link_to user_path(post.user), style: "color:black;" do %>
                      @<%= post.user.users_name %>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td>
                    <%= link_to post_path(post), style: "color:black;" do %>
                      <%= post.title %>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td>
                    <%= link_to post_path(post), style: "color:black;" do %>
                      <%= post.body %>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td>
                    <%= link_to post_path(post) do %>
                      <%= attachment_image_tag post, :image, size: "300x200"  %>
                    <% end %>
                  </td>
                </tr>
                <tr style="margin-top:20px">
                  <td style="text-align:center;">
                    <%= link_to post_path(post),class: "btn btn-success" do %>
                      Comment <i class="far fa-comment-dots"></i><%= post.post_comments.count %>
                    <% end %>
                    <span id="favorite-<%= post.id %>" style="margin-left:20px">
                      <%= render 'posts/favorite', post: post %>
                    </span>
                  </td>
                </tr>
              </table>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-2">
      <div class="post-right">
      <% @users.reverse_each do |users| %>
        <table>
          <tr>
            <td>
              <%= link_to user_path(users) ,style: "color:black;" do %>
                @<%= users.users_name %>
              <% end %>
            </td>
          </tr>
        </table>
      <% end %>
      </div>
    </div>
  </div>
</div>
