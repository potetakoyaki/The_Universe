<div class="border-block">
  <div>
    <%= attachment_image_tag(user, :image, size: "200x130",class:"info-img", fallback: "no_image.png",) %>
  </div>
  <table class='table table-borderless'>
    <tr>
	    <th style="width:4%;">Name</th>
  	  <td>
	      <%= link_to user_path(user),style:"color:black" do %>
	        <%= user.name %>
	      <% end %>
	    </td>
    </tr>
    <tr>
      <th>User Name</th>
      <td>
  	    <%= link_to user_path(user),style:"color:black" do %>
  	        <%= user.users_name %>
  	    <% end %>
  	  </td>
    </tr>
    <tr>
	    <th>Introduction</th>
  	  <td><%= user.introduction %></td>
    </tr>
    <tr>
      <th>Follow</th>
      <td>
        <%= link_to follower_path(user),style:"color:black" do %>
          <%= user.following_user.count %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>Follower</th>
      <td>
        <%= link_to followed_path(user),style:"color:black" do %>
          <%= user.follower_user.count %>
        <% end %>
      </td>
    </tr>
  </table>
</div>