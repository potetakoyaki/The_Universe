<table class='table'>
  <tr><div class="info-image"><%= attachment_image_tag(user, :image, size: "200x130" , fallback: "no_image.png",) %></div></tr>
  <tr>
	  <th>Name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>User Name</th>
	  <th><%= user.users_name %></th>
  </tr>
  <tr>
	  <th>Introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>Follows</th>
    <td>
      <%= link_to follower_path(user) do %>
        <%= user.following_user.count %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th>Follower</th>
    <td>
      <%= link_to followed_path(user) do %>
        <%= user.follower_user.count %>
      <% end %>
    </td>
  </tr>
</table>

<div class='row'>
  <% if current_user == user %>
    <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
  <% end %>
</div>