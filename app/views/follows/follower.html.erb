<div class="container" style="max-width:100%;">
  <div class="row post-list">
    <div class="offset-1 col-3 "><h2 class="post-list-title">@<%= @user.users_name %></h2></div>
    <div class="offset-1 col-4"><h2 class="post-list-title">Follower</h2></div>
    <div class="col-2 "><h2 class="post-list-title">All Posters</h2></div>
  </div>
  <div class="row post-row">
    <div class="offset-1 col-3 post-left">
      
    </div>
    <div class="offset-1 col-4">
      <div class="row">
        <div class="col-12">
          <% @user.posts.reverse_each do |post| %>
            <div class="all-post">
              <div class="allpost">
                <%= link_to post_path(post), style: "color:black;" do %>
                  <%= post.title %>
                <% end %>
              </div>
              <div>
                <%= link_to post_path(post), style: "color:black;" do %>
                  <%= post.body %>
                <% end %>
              </div>
              <div class="allpost">
                <%= link_to post_path(post) do %>
                  <%= attachment_image_tag post, :image, size: "300x200"  %>
                <% end %>
              </div>
              <div class="allpost">
                <%= link_to post_path(post),class: "btn btn-success" do %>
                  Comment <i class="far fa-comment-dots"></i><%= post.post_comments.count %>
                <% end %>
                <span id="favorite-<%= post.id %>" style="margin-left:50px;">
                  <%= render 'posts/favorite', post: post %>
                </span>
              </div>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    <div class="col-2">
      <div class="post-right">
      <% @users.reverse_each do |users| %>
        <table>
          <tr>
            <td>
              <%= link_to user_path(users) ,style: "color:black;" do %>
                @<%= users.users_name %>
              <% end %>
            </td>
          </tr>
        </table>
      <% end %>
      </div>
    </div>
  </div>
</div>
